page{  
  display: flex;  
  flex-direction: column;  
  height: 100%;  
}  
.navbar{  
  flex: none;  
  display: flex;  
  background: #FCFCFC;  
}  
.navbar .item{  
  position: relative;  
  flex: auto;  
  text-align: center; 
  font-size:28rpx;
  size: 15rpx;
  line-height: 80rpx;  
}  
.navbar .item.active{  
  color: #D2691E;  
}  
.navbar .item.active:after{  
  content: "";  
  display: block;  
  position: absolute;  
  bottom: 0;  
  left: 0;  
  right: 0;  
  height: 4rpx;  
  background: #D2691E;  
}  
